{
  "name": "tdb",
  "author": "jultty",
  "version": "0.1.0",
  "description": "Test-Driven Bowling",
  "homepage": "https://github.com/jultty/tdb",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "dev": "jest --watch --collectCoverage --noStackTrace",
    "lint": "eslint .",
    "test": "jest --collectCoverage --coverageDirectory docs",
    "build": "tsc",
    "start": "node dist/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jultty/tdb.git"
  },
  "bugs": {
    "url": "https://github.com/jultty/tdb/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@jest/globals": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "jest": {
    "extensionsToTreatAsEsm": [".ts"],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
